<!-- jumbotron-->
<div class="page-title d-flex" aria-label="Page title">
      <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">

        </nav>
        <h1 class="page-title-heading">Back Office Produits</h1>
      </div>
    </div>

    <!-- Backoffice Items-->
<section>
        <div class="container">
          <h3 class= "block-title text-center pt-3">Modifier le produit</h3>
          <%= form_tag url_for(action: 'update'), method: "put" do %>
            <div class="row"> 
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Titre </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_field_tag 'title', @item.title%></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Description </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_area_tag 'description',@item.description %></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Prix </label>
                </div>
                <div class= "col-md-6">
                  <p><%= number_field_tag 'price', @item.price %></p>
                </div>
            </div>  
            <div class="row" style="margin-bottom:3%;">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Photo </label>
                </div>
                <div class= "col-md-6">
                  <%if @item.catpic.attached?%>
                      <%= image_tag @item.catpic, alt: 'photo du chat' %>
                    <%else%>
                      <em>Il n'y a pas encore de photo du produit</em>
                    <%end%>
                    </div>
                </div>                                                        
            </div>

              <!-- Bouton valider-->
          <div class="container-fluid">
            <div class="row"> 
              <div class= "col-sm-2"></div>
                <div class= "col-sm-8 text-center" style="margin-bottom:3%">
                  <%= submit_tag 'Valider mes modifications de produit', class: "btn btn-primary text-center btn-sm" %>
                </div>
              </div>
          </div>
        </div>
         <% end %>

    <div class="container">
      <h4 class= "block-title text-center pt-3">Modifier la photo du chat ?</h4>
        <div class="container-fluid d-flex justify-content-center">
            <%= form_tag admin_item_catpics_path(@item), multipart: true do %>
              <div class="form-group">
                <%= file_field_tag :catpic %>
                <%= submit_tag "mettre Ã  jour", class: "btn btn-secondary text-center btn-sm" %>
               </div>
            <% end %>
          </div>
    </div>
</section>