<!-- jumbotron-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
      <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">

        </nav>
        <h1 class="page-title-heading">Mon profil</h1>
      </div>
    </div>
    
    <div class="container mb-4">
      <div class="row">
        <div class="col-lg-4 pb-5">
          <!-- Account Sidebar-->
          <div class="author-card pb-3">
            <div class="author-card-cover"><%= image_tag  "cat_background.png"%></div>
            
            <div class="author-card-profile">
            <i class="fas fa-user-circle fa-7x"></i>
              <div class="author-card-details">
                <h5 class="author-card-name text-lg"><%= @user.first_name %> <%= @user.last_name %></h5><span class="author-card-position">Depuis le <%= @user.created_at.strftime("%d %B %Y") %></span>
              </div>
            </div>
          </div>
          <div class="wizard">
            <nav class="list-group list-group-flush"><a class="list-group-item active" href="account-orders.html">
                <div class="d-flex justify-content-between align-items-center">
                  <div><i class="fas fa-user text-muted"></i>
                    <div class="d-inline-block font-weight-medium text-uppercase" href="<%=profile_path%>">Informations Profile</div>
                  </div>
                </div></a><a class="list-group-item" href="#"><i class="fas fa-shopping-bag text-muted"></i>Mes Commande(s)</a></nav>
          </div>
        </div>
        <!-- Profile Settings-->
        <div class="col-lg-8 pb-5">
          <form class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="account-fn">Prénom</label>
                <input class="form-control" type="text" id="account-fn" disabled="" value=<%= @user.first_name %> >
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="account-ln">Nom</label>
                <input class="form-control" type="text" id="account-ln" disabled="" value=<%= @user.last_name %>>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="account-email">Adresse E-mail </label>
                <input class="form-control" type="email" id="account-email" value=<%= @user.email %> disabled="">
              </div>
            </div>
            <div class="col-12">
              <hr class="mt-2 mb-3">
              <div class="d-flex flex-wrap justify-content-between align-items-center">
                <%= link_to "Mettre à jour mon profil" ,edit_user_registration_path, class: "btn btn-primary" %>
              </div>
            </div>
          </form>
        </div>
        
        <!-- Order-->
        <div class="col-lg-8 pb-5">
          <div class="d-flex justify-content-end pb-3">
            <div class="form-inline">
              <label class="text-muted mr-3" for="order-sort">Trier mes commandes</label>
              <select class="form-control" id="order-sort">
                <option>Toutes</option>
                <option>Livré</option>
                <option>En cours</option>
                <option>Retardé</option>
                <option>Annulé</option>
              </select>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Commande #</th>
                  <th>Date de la commande</th>
                  <th>Statut</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><a class="navi-link" href="#order-details" data-toggle="modal">78A643CD409</a></td>
                  <td>August 08, 2017</td>
                  <td><span class="badge badge-danger m-0">Canceled</span></td>
                  <td><span>$760.50</span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
       <!-- End Order-->

      </div>
    </div>